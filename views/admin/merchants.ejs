
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Merchants Management - BenixSpace</title>
  <link rel="icon" href="/static/img/favicon.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .merchant-status {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 5px;
    }
    .merchant-status.active { background-color: #28a745; }
    .merchant-status.inactive { background-color: #dc3545; }
  </style>
</head>
<body class="bg-light">
  <%- include('../partials/navbar') %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Merchants Management</h2>
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addMerchantModal">
            <i class="fas fa-plus-circle me-1"></i> Add Merchant
          </button>
        </div>

        <% if (success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- Search and Filter Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <form method="GET" action="/admin/merchants" class="row g-3">
              <!-- Search Input -->
              <div class="col-md-6">
                <label for="searchQuery" class="form-label">Search Merchants</label>
                <div class="input-group">
                  <input type="text" class="form-control" id="searchQuery" name="search" 
                         placeholder="Search by username, email, or business name..." 
                         value="<%= searchQuery || '' %>">
                  <button class="btn btn-outline-secondary" type="submit">
                    <i class="fas fa-search"></i> Search
                  </button>
                </div>
              </div>
              <!-- Due Amount Filter -->
              <div class="col-md-6">
                <label for="dueAmountFilter" class="form-label">Filter by Due Amount</label>
                <select class="form-select" id="dueAmountFilter" name="dueAmount">
                  <option value="">All Amounts</option>
                  <option value="1" <%= dueAmountFilter === '1' ? 'selected' : '' %>>Less than $100</option>
                  <option value="2" <%= dueAmountFilter === '2' ? 'selected' : '' %>>$100 - $500</option>
                  <option value="3" <%= dueAmountFilter === '3' ? 'selected' : '' %>>$500 - $1000</option>
                  <option value="4" <%= dueAmountFilter === '4' ? 'selected' : '' %>>Over $1000</option>
                </select>
              </div>
              <!-- Sort Options -->
              <div class="col-md-6">
                <label for="sortOrder" class="form-label">Sort By</label>
                <select class="form-select" id="sortOrder" name="sort">
                  <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest First</option>
                  <option value="oldest" <%= sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
                  <option value="amount_asc" <%= sort === 'amount_asc' ? 'selected' : '' %>>Amount Due (Low to High)</option>
                  <option value="amount_desc" <%= sort === 'amount_desc' ? 'selected' : '' %>>Amount Due (High to Low)</option>
                  <option value="total_paid_asc" <%= sort === 'total_paid_asc' ? 'selected' : '' %>>Total Paid (Low to High)</option>
                  <option value="total_paid_desc" <%= sort === 'total_paid_desc' ? 'selected' : '' %>>Total Paid (High to Low)</option>
                </select>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary">Apply Filters</button>
                <a href="/admin/merchants" class="btn btn-outline-secondary">Clear Filters</a>
              </div>
            </form>
          </div>
        </div>

        <!-- Merchants List Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white d-flex justify-content-between">
            <h5 class="mb-0">Merchants List</h5>
            <span class="badge bg-primary"><%= merchants.length %> merchants</span>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Merchant</th>
                    <th>Business Name</th>
                    <th>Balance Due</th>
                    <th>Paid Balance</th>
                    <th>Links</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (merchants && merchants.length > 0) { %>
                    <% merchants.forEach(merchant => { %>
                      <tr>
                        <td>
                          <div class="d-flex align-items-center">
                            <span class="merchant-status <%= merchant.is_verified ? 'active' : 'inactive' %>"></span>
                            <div>
                              <strong><%= merchant.username %></strong><br>
                              <small class="text-muted"><%= merchant.email %></small>
                            </div>
                          </div>
                        </td>
                        <td><%= merchant.business_name || '-' %></td>
                        <td>$<%= parseFloat(merchant.amount_to_pay || 0).toFixed(4) %></td>
                        <td>$<%= parseFloat(merchant.total_paid || 0).toFixed(4) %></td>
                        <td><%= merchant.total_links || 0 %></td>
                        <td><%= new Date(merchant.created_at).toLocaleDateString() %></td>
                        <td>
                          <div class="btn-group">
                            <a href="/admin/merchants/<%= merchant.id %>/manage" class="btn btn-sm btn-info">
                              <i class="fas fa-user-cog"></i>
                            </a>
                            <a href="/admin/merchants/<%= merchant.id %>/edit" class="btn btn-sm btn-primary">
                              <i class="fas fa-edit"></i>
                            </a>
                            <button class="btn btn-sm btn-success" onclick="markPaid(<%= merchant.id %>)">
                              <i class="fas fa-dollar-sign"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteMerchant(<%= merchant.id %>)">
                              <i class="fas fa-trash"></i>
                            </button>
                          </div>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="7" class="text-center">No merchants found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Recent Payments Card -->
        <div class="card shadow-sm">
          <div class="card-header bg-white">
            <h5 class="mb-0">Recent Merchant Payments</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Merchant</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Details</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (payments && payments.length > 0) { %>
                    <% payments.forEach(payment => { %>
                      <tr>
                        <td><%= new Date(payment.created_at).toLocaleString() %></td>
                        <td><%= payment.username %></td>
                        <td>$<%= parseFloat(payment.amount).toFixed(4) %></td>
                        <td>
                          <span class="badge <%= payment.status === 'completed' ? 'bg-success' : (payment.status === 'pending' ? 'bg-warning' : 'bg-danger') %>">
                            <%= payment.status %>
                          </span>
                        </td>
                        <td><%= payment.details || '-' %></td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="5" class="text-center">No recent payments</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Add Merchant Modal -->
  <div class="modal fade" id="addMerchantModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add New Merchant</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/admin/merchants/create" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3">
              <label for="business_name" class="form-label">Business Name</label>
              <input type="text" class="form-control" id="business_name" name="business_name">
            </div>
            <div class="mb-3">
              <label for="business_description" class="form-label">Business Description</label>
              <textarea class="form-control" id="business_description" name="business_description" rows="3"></textarea>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="is_verified" name="is_verified">
              <label class="form-check-label" for="is_verified">
                Verified Merchant
              </label>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Add Merchant</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function markPaid(id) {
      if (confirm('Mark this merchant as paid?')) {
        fetch(`/admin/merchants/${id}/mark-paid`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Merchant marked as paid successfully');
            location.reload();
          } else {
            alert('Error: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while processing your request');
        });
      }
    }
    
    function deleteMerchant(id) {
      if (confirm('Are you sure you want to delete this merchant? This action cannot be undone.')) {
        fetch(`/admin/merchants/${id}/delete`, {
          method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('Merchant deleted successfully');
            location.reload();
          } else {
            alert('Error: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while processing your request');
        });
      }
    }
  </script>
</body>
</html>