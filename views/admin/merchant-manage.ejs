<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/navbar') %>
    <title>Manage Merchant - <%= merchant.username %> - BenixSpace</title>
    <link rel="icon" href="/static/img/favicon.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>Manage Merchant: <%= merchant.username %></h2>
                    <div>
                        <a href="/admin/merchants" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Merchants
                        </a>
                    </div>
                </div>

                <% if (success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <!-- Merchant Overview Card -->
                <div class="card mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Merchant Overview</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Username:</strong> <%= merchant.username %></p>
                                <p><strong>Email:</strong> <%= merchant.email %></p>
                                <p><strong>Phone:</strong> 
                                    <% if (merchant.phone_number) { %>
                                        <%= merchant.phone_number %>
                                        <a href="https://wa.me/<%= merchant.phone_number.replace(/\D/g, '') %>?text=Hello%20BenixSpace%20merchant" 
                                           target="_blank" 
                                           class="btn btn-sm btn-success ms-2">
                                            <i class="fab fa-whatsapp"></i> WhatsApp
                                        </a>
                                    <% } else { %>
                                        Not set
                                    <% } %>
                                </p>
                                <p><strong>Business Name:</strong> <%= merchant.business_name || 'Not set' %></p>
                                <p><strong>Business Description:</strong> 
                                    <% if (merchant.business_description) { %>
                                        <span class="text-muted"><%= merchant.business_description %></span>
                                    <% } else { %>
                                        <span class="text-muted">Not set</span>
                                    <% } %>
                                </p>
                                <p><strong>Status:</strong> 
                                    <span class="badge bg-<%= merchant.is_verified ? 'success' : 'warning' %>">
                                        <%= merchant.is_verified ? 'Verified' : 'Unverified' %>
                                    </span>
                                </p>
                                <p><strong>Joined:</strong> <%= new Date(merchant.created_at).toLocaleDateString() %></p>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">Financial Overview</h6>
                                        <p class="mb-2"><strong>Amount Due:</strong> $<%= parseFloat(merchant.amount_to_pay || 0).toFixed(4) %></p>
                                        <p class="mb-2"><strong>Total Paid:</strong> $<%= parseFloat(merchant.total_paid || 0).toFixed(4) %></p>
                                        <p class="mb-2"><strong>Total Links:</strong> <%= merchant.total_links || 0 %></p>
                                        <p class="mb-2"><strong>Total Products:</strong> <%= merchant.total_products || 0 %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-success me-2" onclick="markPaid(<%= merchant.id %>)">
                                <i class="fas fa-dollar-sign"></i> Mark Payment
                            </button>
                            <a href="/admin/merchants/<%= merchant.id %>/edit" class="btn btn-primary me-2">
                                <i class="fas fa-edit"></i> Edit Details
                            </a>
                            <button class="btn btn-warning me-2" onclick="toggleVerification(<%= merchant.id %>, <%= merchant.is_verified %>)">
                                <i class="fas fa-check-circle"></i> <%= merchant.is_verified ? 'Remove Verification' : 'Verify Merchant' %>
                            </button>
                            <button class="btn btn-danger" onclick="deleteMerchant(<%= merchant.id %>)">
                                <i class="fas fa-trash"></i> Delete Merchant
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Recent Transactions -->
                <div class="card mb-4">
                    <div class="card-header bg-white d-flex justify-content-between">
                        <h5 class="mb-0">Recent Transactions</h5>
                        <a href="/admin/merchants/<%= merchant.id %>/transactions" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (transactions.length > 0) { %>
                                        <% transactions.forEach(transaction => { %>
                                            <tr>
                                                <td><%= new Date(transaction.created_at).toLocaleString() %></td>
                                                <td>
                                                    <span class="badge bg-<%= transaction.type === 'payment' ? 'success' : 'info' %>">
                                                        <%= transaction.type %>
                                                    </span>
                                                </td>
                                                <td>$<%= parseFloat(transaction.amount).toFixed(4) %></td>
                                                <td>
                                                    <span class="badge bg-<%= transaction.status === 'completed' ? 'success' : 'warning' %>">
                                                        <%= transaction.status %>
                                                    </span>
                                                </td>
                                                <td><%= transaction.link_title || transaction.details || '-' %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">No transactions found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Recent Links -->
                <div class="card mb-4">
                    <div class="card-header bg-white d-flex justify-content-between">
                        <h5 class="mb-0">Recent Links</h5>
                        <a href="/admin/merchants/<%= merchant.id %>/links" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Shares</th>
                                        <th>Clicks</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (links.length > 0) { %>
                                        <% links.forEach(link => { %>
                                            <tr>
                                                <td><%= link.title %></td>
                                                <td>
                                                    <span class="badge bg-<%= link.type === 'url' ? 'info' : 'primary' %>">
                                                        <%= link.type %>
                                                    </span>
                                                </td>
                                                <td><%= link.share_count %></td>
                                                <td><%= link.click_count %></td>
                                                <td>
                                                    <span class="badge bg-<%= link.is_active ? 'success' : 'danger' %>">
                                                        <%= link.is_active ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/links/<%= link.id %>" class="btn btn-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/admin/links/<%= link.id %>/edit" class="btn btn-primary">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">No links found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Recent Products -->
                <div class="card mb-4">
                    <div class="card-header bg-white d-flex justify-content-between">
                        <h5 class="mb-0">Recent Products</h5>
                        <a href="/admin/merchants/<%= merchant.id %>/products" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Price</th>
                                        <th>Orders</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (products.length > 0) { %>
                                        <% products.forEach(product => { %>
                                            <tr>
                                                <td><%= product.name %></td>
                                                <td>$<%= parseFloat(product.price).toFixed(4) %></td>
                                                <td><%= product.orders_count %></td>
                                                <td>
                                                    <span class="badge bg-<%= product.is_active ? 'success' : 'danger' %>">
                                                        <%= product.is_active ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="/admin/products/<%= product.id %>" class="btn btn-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/admin/products/<%= product.id %>/edit" class="btn btn-primary">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">No products found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function markPaid(merchantId) {
            if (confirm('Are you sure you want to mark this merchant as paid?')) {
                fetch(`/admin/merchants/${merchantId}/mark-paid`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while processing your request');
                });
            }
        }

        function toggleVerification(merchantId, currentStatus) {
            if (confirm(`Are you sure you want to ${currentStatus ? 'remove verification from' : 'verify'} this merchant?`)) {
                fetch(`/admin/merchants/${merchantId}/toggle-verification`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ is_verified: !currentStatus })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while processing your request');
                });
            }
        }

        function deleteMerchant(merchantId) {
            if (confirm('Are you sure you want to delete this merchant? This action cannot be undone.')) {
                fetch(`/admin/merchants/${merchantId}/delete`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        window.location.href = '/admin/merchants?success=Merchant deleted successfully';
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while processing your request');
                });
            }
        }
    </script>
</body>
</html>