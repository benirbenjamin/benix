<!DOCTYPE html>
<html lang="en">
<head>
    <title>Merchant Analytics - <%= merchant.username %> | Admin - BenixSpace</title>
    <link rel="icon" href="/static/img/favicon.png" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .stats-card {
            transition: all 0.3s;
            border-radius: 10px;
        }
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .chart-container {
            position: relative;
            height: 300px;
            margin-bottom: 20px;
        }
        .metric-value {
            font-size: 1.5rem;
            font-weight: bold;
        }
        .metric-label {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .link-performance {
            border-left: 4px solid #007bff;
            padding-left: 15px;
            margin-bottom: 15px;
        }
        .performance-bar {
            height: 5px;
            background-color: #e9ecef;
            border-radius: 3px;
            overflow: hidden;
        }
        .performance-fill {
            height: 100%;
            background: linear-gradient(90deg, #28a745, #ffc107, #dc3545);
            transition: width 0.3s ease;
        }
    </style>
</head>
<body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">BenixSpace</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/performance">Performance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/users">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/merchants">Merchants</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <%= user.username %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/admin/users/<%= merchant.id %>">User Details</a></li>
                <li class="breadcrumb-item active">Merchant Analytics</li>
            </ol>
        </nav>

        <!-- Merchant Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h1 class="h3 mb-1">
                                    <i class="bi bi-shop text-primary"></i>
                                    <%= merchant.username %> - Analytics
                                </h1>
                                <p class="text-muted mb-0">
                                    <strong>Business:</strong> <%= merchant.business_name || 'N/A' %> |
                                    <strong>Joined:</strong> <%= new Date(merchant.created_at).toLocaleDateString() %>
                                </p>
                            </div>
                            <div class="col-md-4 text-end">
                                <a href="/admin/users/<%= merchant.id %>" class="btn btn-outline-primary">
                                    <i class="bi bi-arrow-left"></i> Back to Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Stats -->
        <div class="row mb-4">
            <div class="col-xl-2 col-md-4 mb-3">
                <div class="card stats-card bg-primary text-white h-100">
                    <div class="card-body text-center">
                        <div class="metric-value"><%= totalStats.total_links %></div>
                        <div class="metric-label">Total Links</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <div class="card stats-card bg-info text-white h-100">
                    <div class="card-body text-center">
                        <div class="metric-value"><%= totalStats.total_shares %></div>
                        <div class="metric-label">Total Shares</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <div class="card stats-card bg-success text-white h-100">
                    <div class="card-body text-center">
                        <div class="metric-value"><%= totalStats.total_clicks %></div>
                        <div class="metric-label">Total Clicks</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <div class="card stats-card bg-warning text-dark h-100">
                    <div class="card-body text-center">
                        <div class="metric-value">$<%= parseFloat(totalStats.total_commissions_paid).toFixed(4) %></div>
                        <div class="metric-label">Commissions Paid</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <div class="card stats-card bg-danger text-white h-100">
                    <div class="card-body text-center">
                        <div class="metric-value">$<%= parseFloat(totalStats.total_cost_incurred).toFixed(4) %></div>
                        <div class="metric-label">Total Cost</div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-md-4 mb-3">
                <div class="card stats-card bg-secondary text-white h-100">
                    <div class="card-body text-center">
                        <div class="metric-value">$<%= parseFloat(merchant.amount_to_pay || 0).toFixed(4) %></div>
                        <div class="metric-label">Amount Due</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <!-- Monthly Performance Chart -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Monthly Performance (Last 6 Months)</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="monthlyPerformanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Link Performance Overview -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Link Performance Distribution</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="linkPerformanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Link Performance -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Individual Link Performance</h5>
                    </div>
                    <div class="card-body">
                        <% if (linkAnalytics && linkAnalytics.length > 0) { %>
                            <% linkAnalytics.forEach(link => { %>
                                <div class="link-performance">
                                    <div class="row align-items-center">
                                        <div class="col-md-6">
                                            <h6 class="fw-bold mb-1"><%= link.title %></h6>
                                            <small class="text-muted">
                                                <span class="badge bg-<%= link.type === 'product' ? 'primary' : 'info' %>">
                                                    <%= link.type %>
                                                </span>
                                                CPC: $<%= parseFloat(link.cost_per_click).toFixed(4) %>
                                            </small>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <strong><%= link.total_shares %></strong><br>
                                            <small class="text-muted">Shares</small>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <strong><%= link.total_clicks %></strong><br>
                                            <small class="text-muted">Clicks</small>
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <strong>$<%= parseFloat(link.total_cost_incurred).toFixed(4) %></strong><br>
                                            <small class="text-muted">Cost</small>
                                        </div>
                                    </div>
                                    <div class="performance-bar mt-2">
                                        <div class="performance-fill" style="width: <%= Math.min((link.total_clicks / Math.max(...linkAnalytics.map(l => l.total_clicks))) * 100, 100) %>%"></div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="bi bi-link-45deg text-muted" style="font-size: 3rem;"></i>
                                <h5 class="text-muted mt-2">No links found</h5>
                                <p class="text-muted">This merchant hasn't created any links yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Shared Links -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Top Performing Shared Links</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Link</th>
                                <th>Shared By</th>
                                <th>Clicks</th>
                                <th>Earnings</th>
                                <th>Shared Date</th>
                                <th>Performance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (linkDetails && linkDetails.length > 0) { %>
                                <% linkDetails.forEach(detail => { %>
                                    <tr>
                                        <td>
                                            <strong><%= detail.title %></strong>
                                        </td>
                                        <td>
                                            <a href="/admin/users/<%= detail.user_id %>">
                                                <%= detail.sharer_name %>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary"><%= detail.clicks %></span>
                                        </td>
                                        <td>
                                            <span class="text-success fw-bold">$<%= parseFloat(detail.earnings || 0).toFixed(4) %></span>
                                        </td>
                                        <td>
                                            <small><%= new Date(detail.shared_at).toLocaleDateString() %></small>
                                        </td>
                                        <td>
                                            <% 
                                                const maxClicks = Math.max(...linkDetails.map(d => d.clicks));
                                                const performance = maxClicks > 0 ? (detail.clicks / maxClicks) * 100 : 0;
                                            %>
                                            <div class="progress" style="height: 5px;">
                                                <div class="progress-bar bg-<%= performance > 75 ? 'success' : performance > 50 ? 'warning' : 'danger' %>" 
                                                     style="width: <%= performance %>%"></div>
                                            </div>
                                            <small class="text-muted"><%= performance.toFixed(1) %>%</small>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">
                                        <div class="py-4">
                                            <i class="bi bi-share text-muted" style="font-size: 2rem;"></i>
                                            <h6 class="text-muted mt-2">No shared links</h6>
                                            <p class="text-muted">This merchant's links haven't been shared yet.</p>
                                        </div>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Monthly Performance Chart
        const monthlyCtx = document.getElementById('monthlyPerformanceChart').getContext('2d');
        const monthlyData = {
            labels: [<% monthlyPerformance.forEach((month, index) => { %>'<%= month.month %>'<%= index < monthlyPerformance.length - 1 ? ',' : '' %><% }) %>],
            datasets: [{
                label: 'Clicks',
                data: [<% monthlyPerformance.forEach((month, index) => { %><%= month.clicks %><%= index < monthlyPerformance.length - 1 ? ',' : '' %><% }) %>],
                borderColor: 'rgb(75, 192, 192)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.1
            }, {
                label: 'Commissions ($)',
                data: [<% monthlyPerformance.forEach((month, index) => { %><%= parseFloat(month.commissions_paid || 0) %><%= index < monthlyPerformance.length - 1 ? ',' : '' %><% }) %>],
                borderColor: 'rgb(255, 99, 132)',
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                tension: 0.1,
                yAxisID: 'y1'
            }]
        };

        new Chart(monthlyCtx, {
            type: 'line',
            data: monthlyData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        title: {
                            display: true,
                            text: 'Clicks'
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        title: {
                            display: true,
                            text: 'Commissions ($)'
                        },
                        grid: {
                            drawOnChartArea: false,
                        },
                    },
                }
            }
        });

        // Link Performance Chart
        const linkCtx = document.getElementById('linkPerformanceChart').getContext('2d');
        const linkData = {
            labels: [<% linkAnalytics.slice(0, 10).forEach((link, index) => { %>'<%= link.title.length > 20 ? link.title.substring(0, 20) + "..." : link.title %>'<%= index < Math.min(linkAnalytics.length, 10) - 1 ? ',' : '' %><% }) %>],
            datasets: [{
                label: 'Clicks',
                data: [<% linkAnalytics.slice(0, 10).forEach((link, index) => { %><%= link.total_clicks %><%= index < Math.min(linkAnalytics.length, 10) - 1 ? ',' : '' %><% }) %>],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 205, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(153, 102, 255, 0.8)',
                    'rgba(255, 159, 64, 0.8)',
                    'rgba(199, 199, 199, 0.8)',
                    'rgba(83, 102, 255, 0.8)',
                    'rgba(255, 99, 255, 0.8)',
                    'rgba(99, 255, 132, 0.8)'
                ]
            }]
        };

        new Chart(linkCtx, {
            type: 'doughnut',
            data: linkData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    }
                }
            }
        });
    </script>
</body>
</html>
