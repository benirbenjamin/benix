<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Commissions - BenixSpace Admin</title>
  <link rel="icon" href="/static/img/favicon.png" type="image/png" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
  <%- include('../partials/navbar') %>

  <div class="container-fluid mt-4">
    <div class="row">
      <div class="col-12">
        <% if (locals.successMessage) { %>
          <div class="alert alert-success alert-dismissible fade show">
            <%= successMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>
        <% if (locals.errorMessage) { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <%= errorMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <div class="card shadow">
          <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-coins"></i> Commission Payments</h4>
            <a href="/admin/dashboard" class="btn btn-light btn-sm">
              <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
          </div>
          <div class="card-body">
            <% if (commissions && commissions.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead class="table-dark">
                    <tr>
                      <th>ID</th>
                      <th>Earner</th>
                      <th>Referrer</th>
                      <th>Referred User</th>
                      <th>Level</th>
                      <th>Amount (USD)</th>
                      <th>Amount (RWF)</th>
                      <th>Type</th>
                      <th>Status</th>
                      <th>Date</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% commissions.forEach(commission => { %>
                      <tr>
                        <td><strong>#<%= commission.id %></strong></td>
                        <td>
                          <a href="/admin/users/<%= commission.user_id %>" class="text-decoration-none">
                            <%= commission.user_username %>
                          </a>
                        </td>
                        <td>
                          <a href="/admin/users/<%= commission.referrer_id %>" class="text-decoration-none">
                            <%= commission.referrer_username %>
                          </a>
                        </td>
                        <td>
                          <a href="/admin/users/<%= commission.referred_user_id %>" class="text-decoration-none">
                            <%= commission.referred_username %>
                          </a>
                        </td>
                        <td>
                          <span class="badge bg-info">Level <%= commission.level %></span>
                        </td>
                        <td>
                          <span class="badge bg-success">$<%= commission.amount_usd %></span>
                        </td>
                        <td>
                          <span class="badge bg-secondary">₣<%= commission.amount_rwf %></span>
                        </td>
                        <td>
                          <% if (commission.commission_type === 'activation') { %>
                            <span class="badge bg-primary">
                              <i class="fas fa-user-check"></i> Activation
                            </span>
                          <% } else if (commission.commission_type === 'purchase') { %>
                            <span class="badge bg-success">
                              <i class="fas fa-shopping-cart"></i> Purchase
                            </span>
                          <% } else if (commission.commission_type === 'referral') { %>
                            <span class="badge bg-info">
                              <i class="fas fa-users"></i> Referral
                            </span>
                          <% } %>
                        </td>
                        <td>
                          <% if (commission.status === 'paid') { %>
                            <span class="badge bg-success">
                              <i class="fas fa-check"></i> Paid
                            </span>
                          <% } else if (commission.status === 'pending') { %>
                            <span class="badge bg-warning">
                              <i class="fas fa-clock"></i> Pending
                            </span>
                          <% } else if (commission.status === 'cancelled') { %>
                            <span class="badge bg-danger">
                              <i class="fas fa-times"></i> Cancelled
                            </span>
                          <% } %>
                        </td>
                        <td>
                          <%= new Date(commission.created_at).toLocaleDateString() %>
                          <br>
                          <small class="text-muted">
                            <%= new Date(commission.created_at).toLocaleTimeString() %>
                          </small>
                        </td>
                        <td>
                          <div class="btn-group btn-group-sm">
                            <a href="/admin/users/<%= commission.user_id %>" class="btn btn-outline-primary btn-sm" title="View Earner">
                              <i class="fas fa-eye"></i>
                            </a>
                            <% if (commission.payment_reference) { %>
                              <button class="btn btn-outline-info btn-sm" title="Payment Reference" 
                                      onclick="copyToClipboard('<%= commission.payment_reference %>')">
                                <i class="fas fa-copy"></i>
                              </button>
                            <% } %>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="fas fa-coins fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No commissions found</h5>
                <p class="text-muted">Commission payments will appear here once users start referring others and they activate their accounts.</p>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Commission Statistics -->
        <div class="row mt-4">
          <div class="col-md-2">
            <div class="card bg-primary text-white">
              <div class="card-body text-center">
                <h6>Total Commissions</h6>
                <h4><%= commissions ? commissions.length : 0 %></h4>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <h6>Paid</h6>
                <h4><%= commissions ? commissions.filter(c => c.status === 'paid').length : 0 %></h4>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="card bg-warning text-white">
              <div class="card-body text-center">
                <h6>Pending</h6>
                <h4><%= commissions ? commissions.filter(c => c.status === 'pending').length : 0 %></h4>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="card bg-info text-white">
              <div class="card-body text-center">
                <h6>Level 1</h6>
                <h4><%= commissions ? commissions.filter(c => c.level === 1).length : 0 %></h4>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="card bg-secondary text-white">
              <div class="card-body text-center">
                <h6>Level 2</h6>
                <h4><%= commissions ? commissions.filter(c => c.level === 2).length : 0 %></h4>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="card bg-dark text-white">
              <div class="card-body text-center">
                <h6>Total USD</h6>
                <h6>$<%= commissions ? commissions.reduce((sum, c) => sum + parseFloat(c.amount_usd), 0).toFixed(4) : '0.00' %></h6>
              </div>
            </div>
          </div>
        </div>

        <!-- Commission Flow Diagram -->
        <div class="card mt-4 shadow">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-sitemap"></i> Commission Flow Example</h5>
          </div>
          <div class="card-body">
            <div class="row text-center">
              <div class="col-md-4">
                <div class="card border-primary">
                  <div class="card-body">
                    <h6>User A (Original)</h6>
                    <p class="text-muted">Refers User B</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card border-success">
                  <div class="card-body">
                    <h6>User B (Level 1)</h6>
                    <p class="text-success">Pays activation → User A gets Level 1 commission</p>
                    <p class="text-muted">Refers User C</p>
                  </div>
                </div>
              </div>
              <div class="col-md-4">
                <div class="card border-warning">
                  <div class="card-body">
                    <h6>User C (Level 2)</h6>
                    <p class="text-success">Pays activation → User B gets Level 1 commission</p>
                    <p class="text-warning">→ User A gets Level 2 commission</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(function() {
        // Show success feedback
        const button = event.target.closest('button');
        const originalHTML = button.innerHTML;
        button.innerHTML = '<i class="fas fa-check"></i>';
        button.classList.remove('btn-outline-info');
        button.classList.add('btn-success');
        
        setTimeout(() => {
          button.innerHTML = originalHTML;
          button.classList.remove('btn-success');
          button.classList.add('btn-outline-info');
        }, 2000);
      });
    }
  </script>
</body>
</html>
