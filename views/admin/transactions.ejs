<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transactions - BenixSpace</title>
  <link rel="icon" href="/static/img/favicon.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
  <%- include('../partials/navbar') %>

  <div class="container-fluid mt-4">
    <div class="row">
      <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2>Transactions Management</h2>
        </div>

        <% if (success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        
        <% if (error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- Transaction Stats -->
        <div class="row mb-4">
          <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
              <div class="card-body text-center">
                <h3><%= stats.total_count %></h3>
                <h6>Total Transactions</h6>
              </div>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
              <div class="card-body text-center">
                <h3><%= stats.completed_count %></h3>
                <h6>Completed</h6>
              </div>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="card bg-warning text-white">
              <div class="card-body text-center">
                <h3><%= stats.pending_count %></h3>
                <h6>Pending</h6>
              </div>
            </div>
          </div>
          <div class="col-md-3 mb-3">
            <div class="card bg-danger text-white">
              <div class="card-body text-center">
                <h3><%= stats.rejected_count %></h3>
                <h6>Rejected</h6>
              </div>
            </div>
          </div>
        </div>

        <!-- Transactions List Card -->
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-white d-flex justify-content-between">
            <h5 class="mb-0">Transactions List</h5>
            <div>
              <a href="/admin/transactions" class="btn btn-sm <%= (typeof currentFilter !== 'undefined' && currentFilter.type === 'all') || typeof currentFilter === 'undefined' ? 'btn-primary' : 'btn-outline-primary' %> me-2">All</a>
              <a href="/admin/transactions?type=payment" class="btn btn-sm <%= typeof currentFilter !== 'undefined' && currentFilter.type === 'payment' ? 'btn-success' : 'btn-outline-success' %>">Payments</a>
              <a href="/admin/transactions?type=withdrawal" class="btn btn-sm <%= typeof currentFilter !== 'undefined' && currentFilter.type === 'withdrawal' ? 'btn-warning' : 'btn-outline-warning' %>">Withdrawals</a>
              <a href="/admin/transactions?type=commission" class="btn btn-sm <%= typeof currentFilter !== 'undefined' && currentFilter.type === 'commission' ? 'btn-info' : 'btn-outline-info' %>">Commissions</a>
            </div>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <div class="row">
                <div class="col-md-6">
                  <label for="statusFilter" class="form-label">Filter by Status:</label>
                  <select class="form-select" id="statusFilter" onchange="filterByStatus()">
                    <option value="all" <%= typeof currentFilter !== 'undefined' && currentFilter.status === 'all' ? 'selected' : '' %>>All Status</option>
                    <option value="completed" <%= typeof currentFilter !== 'undefined' && currentFilter.status === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="pending" <%= typeof currentFilter !== 'undefined' && currentFilter.status === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="rejected" <%= typeof currentFilter !== 'undefined' && currentFilter.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                    <option value="failed" <%= typeof currentFilter !== 'undefined' && currentFilter.status === 'failed' ? 'selected' : '' %>>Failed</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label class="form-label">Current Filter:</label>
                  <p class="mb-0">
                    <span class="badge bg-primary">Type: <%= typeof currentFilter !== 'undefined' ? currentFilter.type.charAt(0).toUpperCase() + currentFilter.type.slice(1) : 'All' %></span>
                    <span class="badge bg-secondary ms-1">Status: <%= typeof currentFilter !== 'undefined' ? currentFilter.status.charAt(0).toUpperCase() + currentFilter.status.slice(1) : 'All' %></span>
                    <span class="badge bg-info ms-1">Total: <%= transactions.length %> transaction<%= transactions.length !== 1 ? 's' : '' %></span>
                  </p>
                </div>
              </div>
            </div>
            <div class="table-responsive">
              <table class="table table-hover" id="transactions-table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>User</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Details</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (transactions && transactions.length > 0) { %>
                    <% transactions.forEach(transaction => { %>
                      <tr>
                        <td><%= transaction.id %></td>
                        <td><%= new Date(transaction.created_at).toLocaleString() %></td>
                        <td><%= transaction.username %></td>
                        <td>
                          <span class="badge bg-<%= transaction.type === 'payment' ? 'success' : (transaction.type === 'withdrawal' ? 'warning' : 'info') %>">
                            <%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1) %>
                          </span>
                        </td>
                        <td>$<%= parseFloat(transaction.amount).toFixed(4) %></td>
                        <td>
                          <span class="badge bg-<%= transaction.status === 'completed' ? 'success' : (transaction.status === 'pending' ? 'warning' : 'danger') %>">
                            <%= transaction.status.charAt(0).toUpperCase() + transaction.status.slice(1) %>
                          </span>
                        </td>
                        <td><%= transaction.details || 'N/A' %></td>
                        <td>
                          <% if (transaction.status === 'pending' && transaction.type === 'withdrawal') { %>
                            <div class="btn-group">
                              <button class="btn btn-sm btn-success" onclick="processTransaction(<%= transaction.id %>, 'completed')">
                                <i class="fas fa-check"></i>
                              </button>
                              <button class="btn btn-sm btn-danger" onclick="processTransaction(<%= transaction.id %>, 'rejected')">
                                <i class="fas fa-times"></i>
                              </button>
                            </div>
                          <% } else { %>
                            <span class="text-muted">No actions</span>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  <% } else { %>
                    <tr>
                      <td colspan="8" class="text-center">No transactions found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Process Transaction Modal -->
  <div class="modal fade" id="processTransactionModal" tabindex="-1" aria-labelledby="processTransactionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="processTransactionModalLabel">Process Withdrawal</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="transactionAlert" class="alert d-none"></div>
          
          <form id="processTransactionForm">
            <input type="hidden" id="transactionId" name="transactionId">
            <input type="hidden" id="transactionStatus" name="status">
            
            <div class="mb-3">
              <label for="transactionNotes" class="form-label">Notes</label>
              <textarea class="form-control" id="transactionNotes" name="notes" rows="3" placeholder="Add notes about this transaction"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="confirmProcessBtn">Confirm</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function filterByStatus() {
      const statusFilter = document.getElementById('statusFilter').value;
      const currentUrl = new URL(window.location);
      
      if (statusFilter === 'all') {
        currentUrl.searchParams.delete('status');
      } else {
        currentUrl.searchParams.set('status', statusFilter);
      }
      
      window.location.href = currentUrl.toString();
    }
    
    function processTransaction(id, status) {
      document.getElementById('transactionId').value = id;
      document.getElementById('transactionStatus').value = status;
      document.getElementById('transactionNotes').value = '';
      document.getElementById('transactionAlert').classList.add('d-none');
      
      // Update modal title based on status
      const modalTitle = document.getElementById('processTransactionModalLabel');
      if (status === 'completed') {
        modalTitle.textContent = 'Complete Withdrawal';
        document.getElementById('confirmProcessBtn').classList.remove('btn-danger');
        document.getElementById('confirmProcessBtn').classList.add('btn-success');
      } else {
        modalTitle.textContent = 'Reject Withdrawal';
        document.getElementById('confirmProcessBtn').classList.remove('btn-success');
        document.getElementById('confirmProcessBtn').classList.add('btn-danger');
      }
      
      const modal = new bootstrap.Modal(document.getElementById('processTransactionModal'));
      modal.show();
    }
    
    document.getElementById('confirmProcessBtn').addEventListener('click', function() {
      const transactionId = document.getElementById('transactionId').value;
      const status = document.getElementById('transactionStatus').value;
      const notes = document.getElementById('transactionNotes').value;
      
      // Submit via fetch API
      fetch(`/admin/transactions/${transactionId}/process`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          status: status,
          notes: notes
        }),
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          const alert = document.getElementById('transactionAlert');
          alert.textContent = data.message;
          alert.classList.remove('d-none', 'alert-danger');
          alert.classList.add('alert-success');
          
          // Disable the confirm button
          document.getElementById('confirmProcessBtn').disabled = true;
          
          // Reload page after delay
          setTimeout(() => {
            location.reload();
          }, 1500);
        } else {
          const alert = document.getElementById('transactionAlert');
          alert.textContent = data.message;
          alert.classList.remove('d-none', 'alert-success');
          alert.classList.add('alert-danger');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        const alert = document.getElementById('transactionAlert');
        alert.textContent = 'An error occurred while processing your request';
        alert.classList.remove('d-none', 'alert-success');
        alert.classList.add('alert-danger');
      });
    });
  </script>
</body>
</html>