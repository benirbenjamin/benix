<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Currency Converter Test - BenixSpace</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Currency Converter Test Page</h2>
                <p class="text-muted">This page demonstrates the currency conversion functionality across different price formats.</p>
            </div>
        </div>
        
        <!-- Sample Product Cards -->
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sample Product 1</h5>
                        <p class="card-text">This is a sample product with a price of $25.99</p>
                        <p class="text-primary fw-bold">Price: $25.99</p>
                        <button class="btn btn-primary">Add to Cart - $25.99</button>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sample Product 2</h5>
                        <p class="card-text">Another product priced at $150.00</p>
                        <p class="text-success fw-bold">Sale Price: $150.00</p>
                        <p class="text-muted text-decoration-line-through">Was: $200.00</p>
                        <button class="btn btn-success">Buy Now - $150.00</button>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Sample Product 3</h5>
                        <p class="card-text">Premium product for $1,299.99</p>
                        <h4 class="text-warning">$1,299.99</h4>
                        <small class="text-muted">Includes shipping ($15.00)</small>
                        <button class="btn btn-warning mt-2">Purchase - $1,299.99</button>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Price Table -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Sample Price Comparison Table</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Regular Price</th>
                                    <th>Sale Price</th>
                                    <th>Savings</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Laptop</td>
                                    <td>$899.00</td>
                                    <td>$749.99</td>
                                    <td>$149.01</td>
                                </tr>
                                <tr>
                                    <td>Smartphone</td>
                                    <td>$599.99</td>
                                    <td>$499.00</td>
                                    <td>$100.99</td>
                                </tr>
                                <tr>
                                    <td>Headphones</td>
                                    <td>$299.99</td>
                                    <td>$199.99</td>
                                    <td>$100.00</td>
                                </tr>
                                <tr>
                                    <td>Tablet</td>
                                    <td>$449.00</td>
                                    <td>$349.99</td>
                                    <td>$99.01</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Dynamic Content Test -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Dynamic Content Test</h5>
                    </div>
                    <div class="card-body">
                        <p>This section tests dynamic content addition with prices.</p>
                        <button id="addPriceBtn" class="btn btn-info">Add Dynamic Price Content</button>
                        <div id="dynamicContent" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Currency Info -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5>Currency Conversion Info</h5>
                        <p class="mb-1">Current Currency: <span id="currentCurrency">USD</span></p>
                        <p class="mb-1">Last Updated: <span id="lastUpdated">Loading...</span></p>
                        <p class="mb-0">Exchange Rates: <span id="exchangeRates">Loading...</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('partials/footer') %>
    
    <script>
        // Dynamic content addition test
        document.getElementById('addPriceBtn').addEventListener('click', function() {
            const dynamicContent = document.getElementById('dynamicContent');
            const randomPrice = (Math.random() * 1000 + 10).toFixed(4);
            
            const newDiv = document.createElement('div');
            newDiv.className = 'alert alert-secondary mt-2';
            newDiv.innerHTML = `
                <strong>New Product Added!</strong> 
                <p>This dynamic product costs $${randomPrice} and includes free shipping worth $25.00!</p>
                <button class="btn btn-sm btn-outline-primary">Buy for $${randomPrice}</button>
            `;
            
            dynamicContent.appendChild(newDiv);
        });
        
        // Update currency info display
        function updateCurrencyInfo() {
            if (window.CurrencyConverter) {
                document.getElementById('currentCurrency').textContent = window.CurrencyConverter.getCurrentCurrency();
                
                const rates = window.CurrencyConverter.getExchangeRates();
                if (Object.keys(rates).length > 0) {
                    document.getElementById('exchangeRates').textContent = JSON.stringify(rates, null, 2);
                    document.getElementById('lastUpdated').textContent = new Date().toLocaleTimeString();
                }
            }
        }
        
        // Update info every few seconds
        setInterval(updateCurrencyInfo, 2000);
        
        // Initial update
        setTimeout(updateCurrencyInfo, 1000);
    </script>
</body>
</html>
