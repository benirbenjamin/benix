<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Products - BenixSpace</title>
    <link rel="icon" href="/static/img/favicon.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- AdSense and Analytics -->
    <%- include('../partials/adsense') %>
</head>
<body class="bg-light">
    <%- include('../partials/navbar') %>
    
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My Products</h2>
            <div>
                <a href="/merchant-user/products/create" class="btn btn-primary me-2">Add New Product</a>
                <a href="/merchant/upload-song" class="btn btn-success">
                    <i class="fas fa-music"></i> Upload Song
                </a>
            </div>
        </div>

        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 <%= product.product_type === 'song' ? 'border-success' : '' %>">
                        <% if (product.product_type === 'song') { %>
                            <% if (product.cover_image) { %>
                                <img src="<%= product.cover_image %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <div class="card-img-top bg-gradient-success d-flex align-items-center justify-content-center text-white" style="height: 200px;">
                                    <div class="text-center">
                                        <i class="fas fa-music fa-3x mb-2"></i>
                                        <div><%= product.genre %></div>
                                        <small><%= product.style %></small>
                                    </div>
                                </div>
                            <% } %>
                        <% } else { %>
                            <% if (product.image_url) { %>
                                <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                            <% } %>
                        <% } %>
                        
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0"><%= product.name %></h5>
                                <span class="badge bg-<%= product.product_type === 'song' ? 'success' : 'primary' %>">
                                    <%= product.product_type === 'song' ? 'Song' : 'Product' %>
                                </span>
                            </div>
                            
                            <p class="card-text"><%= product.description %></p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">$<%= parseFloat(product.price).toFixed(2) %></h6>
                                <% if (product.product_type === 'song') { %>
                                    <span class="badge bg-<%= product.is_sold ? 'danger' : 'success' %>">
                                        <%= product.is_sold ? 'SOLD' : 'Available' %>
                                    </span>
                                <% } else { %>
                                    <span class="badge bg-<%= product.stock > 0 ? 'success' : 'danger' %>">
                                        <%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %>
                                    </span>
                                <% } %>
                            </div>
                            
                            <div class="mt-3">
                                <% if (product.product_type === 'song') { %>
                                    <p class="small mb-0">Genre: <%= product.genre || 'Unknown' %></p>
                                    <p class="small mb-0">Style: <%= product.style || 'secular' %></p>
                                    <% if (product.duration) { %>
                                        <p class="small">Duration: <%= Math.floor(product.duration / 60) %>:<%= (product.duration % 60).toString().padStart(2, '0') %></p>
                                    <% } %>
                                <% } else { %>
                                    <p class="small mb-0">Commission Rate: <%= product.commission_rate %>%</p>
                                    <p class="small">Category: <%= product.category || 'Uncategorized' %></p>
                                <% } %>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <% if (product.product_type === 'song' && product.is_sold) { %>
                                    <button class="btn btn-outline-secondary" disabled>Song Sold</button>
                                    <% if (product.sold_at) { %>
                                        <small class="text-muted">Sold: <%= new Date(product.sold_at).toLocaleDateString() %></small>
                                    <% } %>
                                <% } else { %>
                                    <a href="/merchant-user/products/<%= product.id %>/edit" class="btn btn-outline-primary">Edit</a>
                                    <button onclick="toggleProduct(<%= product.id %>, <%= !product.is_active %>)" 
                                            class="btn btn-outline-<%= product.is_active ? 'warning' : 'success' %>">
                                        <%= product.is_active ? 'Disable' : 'Enable' %>
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script>
        async function toggleProduct(productId, newState) {
            try {
                const response = await fetch(`/merchant-user/products/${productId}/toggle`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ is_active: newState })
                });
                if (response.ok) {
                    window.location.reload();
                }
            } catch (err) {
                console.error('Error toggling product:', err);
                alert('Failed to update product status');
            }
        }
    </script>
</body>
</html>